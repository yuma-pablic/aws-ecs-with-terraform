{
  "containerDefinitions": [
    {
      "cpu": 0,
      "essential": true,
      "image": "{{ tfstate `module.network.data.aws_caller_identity.self.account_id` }}.dkr.ecr.ap-northeast-1.amazonaws.com/sbcntr-backend:v1",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/sbcntr-backend-def",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "name": "app",
      "portMappings": [
        {
          "appProtocol": "http",
          "containerPort": 80,
          "hostPort": 80,
          "name": "app-80-tcp",
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "DB_NAME",
          "valueFrom": "{{ secretsmanager_arn `dev-sbcntr-rds-dbname` }}:dbname::"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "{{ secretsmanager_arn `dev-sbcntr-rds-cluster-arn` }}:host::"
        },
        {
          "name": "DB_USERNAME",
          "valueFrom": "{{ tfstate `module.db.data.aws_secretsmanager_secret.master_password.id` }}:username::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "{{ tfstate `module.db.data.aws_secretsmanager_secret.master_password.id` }}:password::"
        }
      ]
    }
  ],
  "cpu": "1024",
  "executionRoleArn": "arn:aws:iam::{{ tfstate `module.network.data.aws_caller_identity.self.account_id` }}:role/ecsTaskExecutionRole",
  "family": "sbcntr-backend-def",
  "ipcMode": "",
  "memory": "3072",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}